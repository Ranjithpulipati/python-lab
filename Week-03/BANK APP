def credit(amount,value):
    amount+=value
    print(amount)
    return amount



def debit(amount,value):
    amount=amount-value
    print(amount) 
    return amount


def checkbalance(amount):
    print("balance amount in your account",amount)
    
    
    
    
    
    
    
    
    
    
amount=0
amount=credit(amount,2000)
amount=debit(amount,500)
checkbalance(amount)
    
